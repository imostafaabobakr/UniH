<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jdev.kolya.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="كهرباء اتصالات"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/btn1"
        android:textColor="#fff"
        android:background="@drawable/cat_bg"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/cat_bg2"
        android:text="كهرباء قوى"
        android:textColor="#fff"
        android:textSize="20dp"
        android:id="@+id/btn2"
        android:textStyle="bold" />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="ميكانيكا بور"
            android:textStyle="bold"
            android:textColor="#fff"
            android:id="@+id/btn3"
            android:textSize="20dp"
            android:background="@drawable/cat_bg3"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="ميكانيكا انتاج"
            android:textStyle="bold"
            android:id="@+id/btn4"
            android:textSize="20dp"
            android:textColor="#fff"

            android:layout_marginLeft="25dp"
            android:background="@drawable/cat_bg4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="مدنى"
            android:textStyle="bold"
            android:id="@+id/btn5"
            android:textSize="20dp"
            android:textColor="#fff"

            android:background="@drawable/cat_bg5"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="25dp"
            android:text="عمارة"
            android:textStyle="bold"
            android:id="@+id/btn6"
            android:textSize="20dp"
            android:textColor="#fff"
            android:background="@drawable/cat_bg6"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="150dp"
                android:text="مساحة"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#fff"
                android:id="@+id/btn7"
                android:layout_height="150dp"
                android:background="@drawable/cat_bg7"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
