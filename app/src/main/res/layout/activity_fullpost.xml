<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jdev.kolya.Fullpost">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Title of the File"
            android:textSize="25dp"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:id="@+id/titleF"
            android:textStyle="bold"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4/9/2018"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:id="@+id/dateF"
                android:layout_marginTop="3dp"
                android:textColor="#838383"
                android:textSize="18dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/downloadF"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_download"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=".pdf"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:id="@+id/typeF"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:textColor="#838383"
                    android:textSize="18dp"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:text="Lorem ipsum offojkakldjmkladm;lmd;lk;lsmc;amc;klam;alms;lmasc"
            android:textSize="21dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:id="@+id/descF"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
