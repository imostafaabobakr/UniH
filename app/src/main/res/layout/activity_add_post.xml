<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_height="match_parent"
    tools:context="com.jdev.kolya.addPost">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:id="@+id/titleE"
            android:maxLength="50"
            android:singleLine="true"
            android:background="@drawable/cat_bg8"
            android:textColor="#000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="File path"
            android:layout_weight="1"
            android:id="@+id/filepath"
            android:layout_gravity="center"
            android:textColor="#000"/>
        <ImageView
            android:layout_width="70dp"
            android:src="@drawable/ic_upload2"
            android:id="@+id/uploadbtn"
            android:layout_height="70dp" />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:hint="Description...."
        android:id="@+id/descE"
        android:background="@drawable/cat_bg8"
        android:layout_weight="1"
        android:textColor="#000"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_width="wrap_content"
            android:entries="@array/aksam"
            android:id="@+id/aksam"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:id="@+id/subjects"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="@drawable/cat_bg"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:id="@+id/donepost"
        android:text="Done"/>
    </LinearLayout>
</ScrollView>
